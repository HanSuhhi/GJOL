/* 配装 */
.pow {
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 999;
  width: 100%;
  padding: 20px;
  background-color: #fff;
  box-shadow: 5px 2px 10px 0px gray;
  position: fixed;
  top: 0;
}
.pow text:nth-of-type(2),text:nth-of-type(3){
  border: 1px solid #ccc; 
  border-radius: 5px;
  padding: 10px;
  width: 4rem;
  font-size: 14px;
  font-weight: bolder;
  padding-left: 5%;
  letter-spacing: 3px;
}
.pow button {
  width: 30%;
}
#small-title {
  font-size: 14px;
  font-weight: bolder;
  letter-spacing: 1px;
  color: gray;
}

.hr {
  position: relative;
  height: 5rem;
}
.equip {
  display: table;
  align-items: center;
  padding-top: 1rem;
  margin-top: 1rem;
  padding-top: .7rem;
  margin-bottom: 1rem;
  padding-left: 1rem;
  width: 100%;
  border-top: 1px solid rgba(235, 235, 235, 1);
}
.equip>text:first-child {
  display: table-cell;
  vertical-align: middle;
  width: 20%;
}
.equip>view{
  display: table-cell;
  vertical-align: middle;
  width: 2rem;
  height: 2rem;
  border-radius: 5px;
  margin-left: 1rem;
}
.weapon {
  display: table-cell;
  vertical-align: middle;
  letter-spacing: 1px;
  font-weight: bold;
  color: rgba(0, 0, 0, .7);
}
.weapon text {
  margin-left: 1rem;
  font-size: 14px;
}
.equip>text:last-child {
  float: right;
  display: table-cell;
  vertical-align: bottom;
  text-align: right;
  margin-right: 2rem;
  transform: rotate(90deg);
}
#ffalse {
  transform: rotate(-90deg);
}
.equip-item {
  position: relative;
  width: 90%;
  left: 5%;
  border-radius: 8px;
  background-color: #E9BD7A;
}
#equip-item-val {
  border: 1px solid white;
  width: 100%;
}
#equip-item-val text {
  display: inline-block;
  font-size: 15px;
  padding: 6px;
  padding-left: 12px;
  color: white;
  letter-spacing: 2px;
  font-weight: bolder;
  text-align: left;
}
#equip-item-val text:nth-of-type(2) {
  text-align: right;
  float: right;
  color: rgb(154, 51, 68);
  font-size: 12px;
  letter-spacing: normal;
  font-weight: bold;
}